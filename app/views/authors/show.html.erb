<h1>Author Details</h1>

<%= link_to "Back to Author List", authors_path %>
<%= link_to "Edit", edit_author_path(@author) %>

<h2><span>Author First Name</span>: <%= @author.fname %></h2>
<h2><span>Author Last Name</span>: <%= @author.lname %></h2>
<h2><span>Author Created at</span>: <%= @author.created_at %></h2>

<h2> Posts </h2>
  <ul>
    <% @posts.each do |post| %>
      <li><%= link_to post.postname, post_path(post) %></li>
    <% end %>
  </ul>
